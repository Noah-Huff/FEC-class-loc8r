mixin outputRating(rating)
   -for (let i=1; i<=5; i++)
      -if (i<=rating || (i>rating&&i<(rating+1)&&rating%1>0.5))
         i.fas.fa-star
      -else if (i>rating && i<(rating+1) && rating%1 > 0.2 && rating%1 <= 0.5)
         i.fas.fa-star-half-alt
      -else if (i>=rating)
         i.far.fa-star

